{
  "name": "tournament-pro",
  "version": "1.0.0",
  "description": "Advanced PvP Tournament System with Multi-threading and Checkpoints",
  "main": "dist/main/main/main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "start": "electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist dist-electron release",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder --win --mac --linux",
    "dist": "npm run package",
    "dist:win": "npm run package:win",
    "dist:mac": "npm run package:mac",
    "dist:linux": "npm run package:linux",
    "dist:all": "npm run package:all",
    "release": "npm run build && electron-builder --publish=never",
    "release:win": "npm run build && electron-builder --win --publish=never",
    "release:mac": "npm run build && electron-builder --mac --publish=never",
    "release:linux": "npm run build && electron-builder --linux --publish=never"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.6.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^23.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vitest": "^1.6.1"
  },
  "build": {
    "extends": "./electron-builder.json"
  }
}
