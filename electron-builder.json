{
  "appId": "com.tournamentpro.app",
  "productName": "Tournament Pro",
  "copyright": "Copyright Â© 2024 Tournament Pro",
  "asar": true,
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "USER_GUIDE.md",
      "to": "docs/USER_GUIDE.md"
    },
    {
      "from": "QUICK_START.md",
      "to": "docs/QUICK_START.md"
    },
    {
      "from": "TROUBLESHOOTING.md",
      "to": "docs/TROUBLESHOOTING.md"
    },
    {
      "from": "README.md",
      "to": "docs/README.md"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "publisherName": "Tournament Pro",
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker",
    "sign": null
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Tournament Pro"
  },
  "portable": {
    "artifactName": "TournamentPro-${version}-portable.exe"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.icns",
    "category": "public.app-category.games",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist"
  },
  "dmg": {
    "title": "Tournament Pro ${version}",
    "icon": "assets/icon.icns",
    "iconSize": 100,
    "contents": [
      {
        "x": 130,
        "y": 220,
        "type": "file"
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      },
      {
        "target": "tar.gz",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Game",
    "synopsis": "PvP Build Tournament Simulator",
    "description": "Tournament Pro is a desktop application for running PvP build tournaments. It simulates battles between different character builds to determine optimal stat combinations.",
    "desktop": {
      "Name": "Tournament Pro",
      "Comment": "PvP Build Tournament Simulator",
      "Categories": "Game;Simulation;",
      "Keywords": "tournament;pvp;builds;simulation;gaming;"
    }
  },
  "appImage": {
    "artifactName": "TournamentPro-${version}.AppImage"
  },
  "deb": {
    "artifactName": "tournament-pro_${version}_amd64.deb",
    "depends": [
      "libgtk-3-0",
      "libnotify4",
      "libnss3",
      "libxss1",
      "libxtst6",
      "xdg-utils",
      "libatspi2.0-0",
      "libdrm2",
      "libgbm1",
      "libxcb-dri3-0"
    ]
  },
  "rpm": {
    "artifactName": "tournament-pro-${version}.x86_64.rpm",
    "depends": [
      "gtk3",
      "libnotify",
      "nss",
      "libXScrnSaver",
      "libXtst",
      "xdg-utils",
      "at-spi2-atk",
      "libdrm",
      "mesa-libgbm",
      "libxcb"
    ]
  },
  "publish": null,
  "buildVersion": "1.0.0"
}